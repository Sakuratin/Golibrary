/* pages/collects/collects.wxss */
page {
    width: 100%;
    height: 100%;
    background: linear-gradient(70deg, rgb(17, 0, 255), rgb(228, 255, 192));
}
.container {
    width: 100%;
    height: 100%;
}
.back {
    font-size: 38rpx;
    color: white;
    margin-top: 24rpx;
    margin-left: 24rpx;
}
.collect-list {
    height: 100%;
    padding-top: 25rpx;
    border-top-left-radius: 25rpx;
    border-top-right-radius: 25rpx;
    padding-left: 36rpx;
    padding-right: 20rpx;
    margin-top: 55rpx;
    background-color: white;
}
.collect-list .collect-item {
    display: flex;
    padding-left: 5rpx;
    margin-top: 25rpx;
}
/* .collect-list .collect-item .collect-cover {
    height: 400rpx;
} */
.collect-list .collect-item .collect-cover image{
    width: 240rpx;
    height: 340rpx;
    /* margin: 40rpx 40rpx 20rpx 40rpx; */
    border-radius: 25rpx;
    border: 1px solid #cfcfcf;
    display: inline-block
}
.collect-list .collect-item .collect-info {
    /* display: inline-block; */
    padding-left: 20rpx;
    padding-top: 2rpx;
    line-height: 50rpx;
}
.collect-list .collect-item .collect-info .info-title {
    display: block;
    /* margin-top: 50rpx; */
    font-weight: bold;
    font-size: 35rpx;
    font-family: Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
}
.collect-list .collect-item .collect-info text {
    display: block;
    color: #888888;
    font-size: 30rpx;
    margin-top: 5rpx;
}


.collect-list .collect-item .collect-info text:nth-of-type(1), .info-title {
    width: 100%;
    max-height: 100rpx;
    text-overflow: -o-ellipsis-lastline ellipsis;
    overflow: hidden;
    word-break: break-all;
    line-clamp: 2;
}

.collect-list .move {
    margin-left: -200rpx;
}

.backIcon {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    position: relative;
    top: 6rpx;
    right: 5rpx;
}
