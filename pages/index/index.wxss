page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  background-color: rgba(175, 238, 238, 0.274);
}
.back {
  top: 12rpx;
  width: 100%;
  height: 40rpx;
  background-color: palevioletred;
}
.info {
  overflow: hidden;
  background-color: white;
  width: 100%;
  height: 580rpx;
  border-bottom-left-radius: 10%;
  border-bottom-right-radius: 10%;
}
.info .info-img {
  margin: 120rpx auto 0 auto;
  width: 240rpx;
  height: 240rpx;
  /* background-color: tomato; */
  border-radius: 100%;
}
.info .info-img image {
  display: block;
  width: 240rpx;
  height: 240rpx;
  border-radius: 100%;
}
.info .info-name {
  font-size: 60rpx;
  font-weight: 800;
  margin-top: 20rpx;
  text-align: center;
}
.info .info-des {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin: 20rpx auto 0 auto;
}

/* 下方设置展示 */
.icons {
  margin: 40rpx auto 0 auto;
  width: 90%;
  /* height: 344rpx; */
  background-color: white;
  border-radius: 10%;
  padding: 66rpx 0rpx;

}
.icons .icons-detail {
  width: 145rpx;
  height: 40rpx;
  display: inline-block;
  margin: 0 0 40rpx 60rpx;
}

/* .icons-detail:nth-of-type(3n-1) {
  margin: 0 40rpx;
} */
.icons-detail:nth-of-type(4), .icons-detail:nth-of-type(5) {
  margin-top: 64rpx;
}

.icons .icons-detail image {
  display: block;
  width: 60rpx;
  height: 80rpx;
  margin: auto;
  text-align: center;
}
.icons .icons-detail .icons-txt {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}