/* pages/login/login.wxss */
page {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(175, 238, 238, 0.274);
}
.container {
  width: 100%;
  /* height: 100%; */
  /* background-color: rgba(175, 238, 238, 0.274); */
}
.login-icon image {
  display: block;
  margin: 100rpx auto 0 auto;
  width: 240rpx;
  height: 240rpx;
  /* background-color: tomato; */
  border-radius: 100%;
}
.login-info {
  /* margin-top: 40rpx; */
  width: 90%;
  border-radius: 50rpx;
  margin: 40rpx auto;
  background-color: white;
  overflow: hidden;
}
.login-info .login-txt {
  display: block;
  color: rgb(35, 180, 35);
  font-size: 56rpx;
  text-align: center;
  margin: auto;
  margin-top: 30rpx;
}
.login-info input {
  display: block;
  background-color: rgba(153, 153, 153, 0.164);
  width: 86%;
  height: 90rpx;
  margin-top: 46rpx;
  /* margin: auto; */
  margin-left:auto;
  margin-right:auto;
  padding-left: 40rpx;
  border-radius: 24rpx;
}
.login-info .login-btn {
  background-color: rgba(35, 180, 35, 0.637);
  color: white;
  margin-top: 46rpx;
  width: 90%;
  text-align: center;
  border-radius: 24rpx;
  font-weight: 400;
  vertical-align: middle;
  padding: 20rpx 0;
}
.login-info .regist-txt {
  display: block;
  padding-bottom: 50rpx;
  padding-top: 50rpx;
  text-align: center;
}
.login-info .regist-txt .txtl {
  color: #999;
}
.login-info .regist-txt .txtr {
  color: rgb(0, 183, 255);
}
.fast-login {
  margin: auto;
  padding-bottom: 40rpx;
  padding-top: 0;
  /* background-color: slateblue; */
}
.fast-login image {
  /* border-radius: 50%; */
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 150rpx auto 0 auto;
  /* background-color: plum; */
}
.fast-login text {
  display: block;
  color: rgba(35, 180, 35, 0.637);
  text-align: center;
  margin-top: 0;
  /* background-color: pink; */
}